<!DOCTYPE html>
<html lang="en">
  <head>
    <title> <%= @station.name %> </title>
  </head>

  <body>
    <h1><%= @station.name %></h1>
    <p><a href="/">Home</a></p>
    <p><a href="/stations">All Stations</a></p>
    <p><a href="/trips">All Trips</a></p>
    <p><a href="#">Edit</a></p>
    <p><a href="#">Delete</a></p>
    <select name='station[id]'>
      <% @all_stations.each do |station| %>
        <option value=<%= station.id %>><%= station.name %>></option>
      <% end %>
    </select>
    <p><%= @station.name %></p>
    <p><%= @city.find(@station.city_id).city %></p>
    <p><%= @station.installation_date %></p>
  </body>
</html>
