<h1>Trip Index</h1>

<h4><a href="/trips/new">Create New Trip</a></h4>

<div class="container">

  <table class="table">

    <thead>
      <th>#</th>
      <th>Trip Date</th>
      <th>Duration</th>
      <th>Starting Station</th>
      <th>Ending Station</th>
      <th>Bike</th>
      <th>Subscription</th>
      <th>Zipcode</th>
    </thead>

    <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <th scope="row"><a href="/trips/<%= trip.id %>"><%= trip.id %></th>
          <td><%= BikeDate.find(trip.start_date).date.strftime("%B %d, %Y") %></td>
          <td><%= trip.duration %></td>
          <td><%= Station.find(trip.start_station).name %></td>
          <td><%= Station.find(trip.end_station).name %></td>
          <td><%= Bike.find(trip.bike_id).bike %></td>
          <td><%= Subscription.find(trip.subscription_type).subscription_type %></td>
          <td><%= ZipCode.find(trip.zip_code).zip_code %></td>
          <td><button type="button"><a href="/trips/<%= trip.id %>/edit">Edit</a></button></td>
          <td><form action="/trips/<%= trip.id %>" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            <input type="submit" value="Delete" />
            </form></td>
    <% end %>
  </tbody>

</table>

</div>

<p><%= will_paginate @pages %></p>
